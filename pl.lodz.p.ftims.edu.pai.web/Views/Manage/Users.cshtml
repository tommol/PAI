@model IEnumerable<pl.lodz.p.ftims.edu.pai.web.Models.UserListItemViewModel>

@{
    ViewBag.Title = "Users";
}

<h2>Users</h2>

<p>
    @Html.ActionLink("Dodaj", "AddUser","Account",new { },new { @class="btn btn-primary"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ApiId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ApiId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            <div class="btn-group btn-group-sm" role="group">
                @Html.ActionLink("Edytuj", "EditUser", new { id = item.Id } ,htmlAttributes:new { @class="btn btn-default"}) 
                @Html.ActionLink("Podgląd", "UserDetails", new { id = item.Id },htmlAttributes: new { @class = "btn btn-default" })
                @Html.ActionLink("Usuń", "Delete", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-default" })
            </div>
</td>
    </tr>
}

</table>
